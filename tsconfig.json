{
	"compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "declaration": true,
        "strict": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "./lib"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*"]
}

